<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/babyBlue"
    android:orientation="vertical"
    tools:context="com.noah.businesskineret.MainActivity">

    <TextView
        style="@style/titles"
        android:padding="20dp"
        android:text="Kineret Fartuk"
        android:textSize="26sp" />

    <TextView
        style="@style/titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/professional" />

    <TextView
        style="@style/titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ages" />





    <ImageView
        android:id="@+id/rainbow"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/rainbow" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageMail"
                style="@style/icons"
                android:src="@drawable/mail" />

            <TextView
                android:id="@+id/mail"
                style="@style/titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/mail"
                android:autoLink="email"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagePhone"
            style="@style/icons"
            android:src="@drawable/phone" />


        <TextView
            android:id="@+id/phone"
            style="@style/titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phoneNumber"
            android:layout_gravity="center_vertical"
            android:autoLink="phone"
            />

        </LinearLayout>



    <TextView
        android:id="@+id/firstStep"
        android:text="@string/firstStep"
        style="@style/titles"
        android:layout_marginTop="50dp"/>

</LinearLayout>
